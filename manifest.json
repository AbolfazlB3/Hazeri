{
  "name": "click-product-addtocart-button",
  "description": "Click a button with ID=product-addtocart-button",
  "manifest_version": 2,
  "version": "0.1",

  "permissions": [
    "activeTab",
    "storage"
  ],

  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },

  "browser_action": {
    "default_title": "Click product-addtocart-button",
    "default_popup": "popup.html"
  }
}